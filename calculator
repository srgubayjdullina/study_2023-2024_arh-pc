#include <iostream>
#include <cmath>
using namespace std;

int main() {
	while (true) {

		char op;
		float num1, num2;
		cout << "Введите первое число: ";
		cin >> num1;

		cout << "Введите операцию над числами(+,-,*,/,^): "; 
		cin >> op;

		cout << "Введите второе число: ";
		cin >> num2;

		switch (op) {
		case '+':
			cout << num1 << " + " << num2 << " = " << num1 + num2 << endl;
			break;

		case '-':
			cout << num1 << " - " << num2 << " = " << num1 - num2 << endl;
			break;

		case '*':
			cout << num1 << " * " << num2 << " = " << num1 * num2 << endl;
			break;

		case '/':
			cout << num1 << " / " << num2 << " = " << num1 / num2 << endl;
			break;

		case '^':
			cout << num1 << " ^ " << num2 << " = " << pow(num1, num2) << endl;
			break;
		default:
			cout << "Mistake -_____-" << endl;
			break;
		}
	}

	return 0;
